                        <a class="navbar-brand" href="/">+Easy</a>
                    </div>
                    <ul class="nav navbar-nav">
                    <li><a href="/turno">Mis Turnos</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="/usuario">Usuarios</a></li>
                        <li><a href="/tienda">Tiendas</a></li>  
                    {% endif %}
                                
                    </ul>
                    <ul class="nav navbar-nav navbar-right" style="margin-right: 3px">  
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="/turno">{{ app.user.username }}<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/cambiarcontrasena">Cambiar contrase√±a</a></li> 
                                    <li><a href="/logout">Logout <span class="glyphicon glyphicon-log-in"></span></a></li>                           
