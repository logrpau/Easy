{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}



<h2>{{ titulo }}</h2>
<div class="form-horizontal">
{{ form_start(form) }}
   {{ form_errors(form) }}
    
    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.id_usuario,'Username') }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.id_usuario, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.id_tienda,'Tiendas') }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.id_tienda, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.fecha,'Fecha') }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.fecha) }}
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.hora_inicio,'Entrada') }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.hora_inicio) }}
        </div>
    </div>
     <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.hora_fin,'Salida') }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.hora_fin) }}
        </div>
    </div>
     <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.comentario,'Comentarios del d√≠a') }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.comentario, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Guardar</button>
      </div>
    
    {{ form_row(form._token) }}

{% endblock %}
